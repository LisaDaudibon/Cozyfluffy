<div class="container rounded text-primary justify-content-center bg-light">
  <div class="row row-cols-1 text-center p-1">
    <div class="col-sm-1 text-start g-0 ">
      <%= link_to "< Retour", home_index_path, class:"btn btn-primary btn-sm" %>
    </div>
    <div class="col-sm-11 text-center">
      <h3>MENU</h3>
    </div>
  </div>
</div>

<div class="container rounded bg-dark py-4 px-7 align-items-center">
  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-4">
    <% @categories.each do |category| %>
      <div class="col">
        <div class="card border-primary mb-3" style="max-width: 18rem;">
          <div class="card-header text-white bg-primary text-center" style="max-width: 18rem;"><h5><%= category.name %></h5></div>
          <% @products.each do |product| %>
            <% if product.category.id === category.id %>
              <%if product.id.even?%>
                <div class="card-body bg-light">
                  <div class="row">
                    <div class="col">
                      <div class="card-text"><%= product.name%></div>
                        <% if current_user&.is_admin? %>
                          <a class="btn btn-info btn-sm" href="/products/<%= product.id %>/edit" role="button"><i class="fa-solid fa-pen"></i></a>
                        <% end %>
                    </div>
                    <div class="col">
                      <div class="card-text text-end"><%= product.price%> €
                        <% if current_user&.is_admin? %>
                          <%= form_for product, method: :delete do |f| %>
                            <%= f.submit 'X', class:"btn btn-danger btn-sm"%>
                          <% end %>
                        <% end %>
                      </div>
                    </div>
                  </div>
                </div>
              <% else %>
                <div class="card-body">
                  <div class="row">
                    <div class="col">
                      <div class="card-text text-start"><%= product.name%></div>
                        <% if current_user&.is_admin? %>
                          <a class="btn btn-info btn-sm" href="/products/<%= product.id %>/edit" role="button"> <i class="fa-solid fa-pen"></i> </a>
                        <% end %>
                    </div>
                    <div class="col">
                      <div class="card-text text-end"><%= product.price%> €
                        <% if current_user&.is_admin? %>
                          <%= form_for product, method: :delete do |f| %>
                            <%= f.submit 'X', class:"btn btn-danger btn-sm"%>
                          <% end %>
                        <% end %>
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="row row-cols-1">
    <div class="col text-center">
    <%= link_to "< Retour", home_index_path, class:"btn btn-primary" %>
    </div>
  </div>
</div>
