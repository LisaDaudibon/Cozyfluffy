
<br>
<div class="container text-primary text-center justify-content-center bg-light ">
  <h3>MENU</h3>
</div>

<div class="container text-center bg-dark py-4 px-7 align-items-center">
  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-4">
    <% @categories.each do |category| %>
      <div class="col">
        <div class="card border-primary mb-3" style="max-width: 18rem;">
          <div class="card-header text-white bg-primary" style="max-width: 18rem;"><h5><%= category.name %></h5></div>
          <% @products.each do |product| %>
            <% if product.category.id === category.id %>
              <%if product.id.even?%>
                <div class="card-body bg-light">
                  <p class="card-text"><%= product.name%></p>
                </div>
              <% else %>
                <div class="card-body g-2">
                  <p class="card-text"><%= product.name%></p>
                </div>
              <% end %>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
<br>