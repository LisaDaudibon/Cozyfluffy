<style>
.cats-container {
  display: grid;
  grid-template-columns: auto auto;
}


</style>

<br>
<div class="container">
   
    <div class="row row-cols-1 text-center p-1">
        <div class="col-sm-1 text-start g-0 ">
          <a class="btn btn-sm" href="/" role="button" style="color: #ebb181;"><i class="fa-solid fa-arrow-left"></i></a>
        </div>
        <div class="col-sm-11 text-center"> 
            <h3 class="bg-light text-color-brown text-center">NOS CHATS</h3>
        </div>
      </div>
    </div>
      
  <div class=" cats-container rounded-bottom bg-dark py-7 px-7 text-center">

    <div class="row justify-content-center">
      <div class="row col-md-4 justify-content-end ">
          <% @catsresidents.each do |cat| %>
        <div class=" card text-center"style="height:750px;">
          <div class="card-body bg-light rounded ">
            <div class="card-header rounded rounded-0 bg-primary text-center" style="color: #ebb181;"><h5><strong><%= cat.name %></strong></h5></div>
              
                <div class="card">
                  <div class="card-body text-center" style="height:500px;">
                      <img class="img-fluid img-thumbnail" style="width:100% ; height:375px ; max-width:550px" src="<%= cat.image_url %>"/>
                          <h5 id="card-title"><strong><%= cat.name%></strong></h5>
                          <p class="card-text">
                            <%= cat.description %>
                            <br>
                            <%= link_to "Voir notre minou", cat, class:"btn btn-primary" %>
                          </p>                    
                        </div>
                      </div>
                  </div>
                </div>    
                  <% end %>
            </div>      

      <div class="row col-md-6">
          <% @catsadoptables.each do |cat| %>
          <div class="card text-center" style="max-width:750px; max-height:750px">
          <div class="card-body bg-light rounded">

            <div class="card-header rounded rounded-0 bg-primary text-center" style="color: #ebb181;"><h5><strong><%= cat.name %></strong></h5></div>

              <div class="card">
                <div class="card-body text-center" style="max-height:500px; height:auto;">
                    <img class="img-fluid img-thumbnail" style="width:100% ; height:375px ; max-width:550px" src="<%= cat.image_url %>"/>
                  <h5 id="card-title"><strong><%= cat.name%></strong></h5>
                      <p class="card-text">
                        <%= cat.description %>
                        <br>
                        <%= link_to "Voir notre minou", cat, class:"btn btn-primary" %>

                      </p>
                </div>
              </div>
            
          </div>
          </div>
        <% end %>

      

</div>
<br>