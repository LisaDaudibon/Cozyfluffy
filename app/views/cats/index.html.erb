<style>
@media (min-width: 768px) {
  .cats-container {
    grid-template-columns: auto auto;
  }
}

.cats-container {
  padding-left: 12px;
  justify-content: center;
  align-items: center;
}

.card {
  height: 100%;
  max-height: 750px;
  align-items: center;
}

.card-body {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.card-img-top {
  width: 100%;
  height: 375px;
  max-width: 550px;
  object-fit: cover;
}
</style>

<br>
<div class="container-fluid">
  <div class="cats-container rounded text-center bg-dark">
    <div class="row justify-content-center" style="color: #ebb181;">
      <div class="col-lg-4">
        <div class="row">
          <h3 class="rounded text-color-brown text-center" style="background-color:#ebb181; color:#ffffff;">Nos minous r√©sidents</h3>
          <% @catsresidents.each do |cat| %>
            <div class="card mb-4 h-100" style="padding:12px;">
              <h5><strong><%= cat.name %></strong></h5>
              <img class="img-fluid img-thumbnail" style="width:100%" src="<%= cat.image_url %>"/>
              <div class="card-body rounded">
                <div class="flex-grow-1">
                  <%= cat.description %>
                </div>
                <div class="text-center">
                  <br>
                  <%= link_to "Voir notre minou", cat, class:"btn btn-small", style:"background-color: #a76551;"%>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
      <div class="col-lg-8">
        <h3 class="rounded text-color-brown text-center" style="background-color:#ebb181; color:#ffffff;">Nos minous adoptables</h3>
        <div class="row">
          <% @catsadoptables.each do |cat| %>
            <div class="col-md-6 col-sm-6 mb-4">
              <div class="card h-100" style="padding:12px">
                <h5><strong><%= cat.name %></strong></h5>
                <img class="img-fluid img-thumbnail" style="width:100%" src="<%= cat.image_url %>"/>  
                <div class="card-body rounded" >
                  <div class="flex-grow-1">
                    <%= cat.description %>
                  </div>
                  <div class="text-center">
                    <br>
                    <%= link_to "Voir notre minou", cat, class:"btn btn-small", style:"background-color: #a76551;"%>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<br>
