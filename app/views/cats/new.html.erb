<h1>Cats#new</h1>
<p>Find me in app/views/cats/new.html.erb</p>
<div class="container">
<p class="fw-bold text-success mb-2">Ajout de Minou</p>

<%=flash[:error] if flash[:error].present?%>
<%= form_with(model: @cat, url: cats_path) do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "nom" %>
  </div>

  <div class="field">
    <%= f.label :birth_date %><br/>
    <%= f.text_field :birth_date, autocomplete: "date" %>
  </div>

  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_field :description, autocomplete: "description" %>
  </div>

    <div class="form-check">
        <input class="form-check-input" type="checkbox" value="true" id="flexCheckChecked" checked>
        <label class="form-check-label" for="adoption">
        <%= check_box_tag :adoption, true, checked: true %>

        Checked checkbox
        </label>
    </div>


  <div class="actions">
    <%= f.submit "Ajout" %>
  </div>

<% end %>
</div>
</div>
