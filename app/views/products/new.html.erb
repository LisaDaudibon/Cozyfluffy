<div class="container-fluid">
  <div class="my-form">
    <%= form_with model: @product, url: products_path do |f| %>
    <h2 class="text-center">Ajouter un produit</h2>
    <div class= "text-primary"><%=flash[:error] if flash[:error].present?%>
      <% if @product.errors.any? %>
        <%= @product.errors.full_messages%>
      <% end %>
    </div>
    <div class="field">
      <%= f.label :nom %><br/>
      <%= f.text_field :name, autofocus: true, autocomplete: "nom", class:"form-control" %>
    </div>
    <br>
    <div class="field">
      <%= f.label :prix %><br/>
      <%= f.number_field :price, autocomplete: "prix", class:"form-control" %>
    </div>
    <br>
    <div class="form-check">
      <%= collection_radio_buttons(:product, :category_id, Category.all, :id, :name) do |b|%>
        <div>
          <%= b.label(class: "radio_button") { b.radio_button(class: "radio_button") } %>
          <%= b.object.name %>
        </div>
      <% end %>
    </div>
    <div class="actions text-center">
      <%= f.submit "Confirmer", class:"btn btn-primary"  %>
    </div>
    <% end %>
  </div>
</div>